	$(CC) -o $@ $^ $(CXXFLAGS)  $(LIBS)

andQueryTest.exe:andQueryTest.o $(OBJS) 
	$(CC) -o $@ $^ $(CXXFLAGS)  $(LIBS)

and_orQueryTest.exe:and_orQueryTest.o $(OBJS) 
	$(CC) -o $@ $^ $(CXXFLAGS)  $(LIBS)
