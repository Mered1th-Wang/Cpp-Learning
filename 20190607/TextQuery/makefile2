
CC:= g++
CXXFLAGS:= -g -Wall
LIBS:= -llog4cpp -lpthread
OBJS:= Query.o TextQuery.o get_print.o

all:wordQueryTest.exe andQueryTest.exe and_orQueryTest.exe

